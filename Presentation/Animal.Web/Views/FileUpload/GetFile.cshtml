@{
	ViewData["title"] = "FileUpload";
}

<div>
	@using (Html.BeginForm("GetFile", "FileUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		@Html.AntiForgeryToken()
		@Html.ValidationMessage("FormValidation")

		<br />

		<span>Enter File name: </span>
		<input type="text" name="fileName" />
		<br />
		<br />
		<input type="submit" value="Submit Form" />
	}
</div>