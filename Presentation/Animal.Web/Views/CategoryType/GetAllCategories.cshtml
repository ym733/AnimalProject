@model List<Entities.CategoryType>

@{
	ViewData["title"] = "get all categories";
}

<div>
	<table class="table table-bordered table-striped">
		<thead>
			<th class="p-3">ID</th>
			<th class="p-3">Name</th>
			<th class="p-3">ImagePath</th>
		</thead>

		@{
			foreach (var item in Model)
			{
				<tr>
					<td class="p-3">@item.Id</td>
					<td class="p-3">@item.CategoryName</td>
					<td class="p-3">@item.ImagePath</td>
					<td class="p-3">
						<a class="nav-link text-dark" asp-area="" asp-controller="categoryType" asp-action="GetCategoryType" asp-route-id=@item.Id>view model</a>
					</td>
				</tr>
			}
		}
	</table>
</div>