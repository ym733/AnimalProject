@using Animal.Web.MediaComponents

@using (Html.BeginForm("DeleteAnimal", "Animal", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = $"formSubmit('{Url.Action("DeleteAnimal", "Animal")}', this, event);" }))
{
	@Html.AntiForgeryToken()
	<div>@Html.ValidationMessage("FormValidation")</div>

	@Html.SingleStringInput("id")

	@Html.SubmitButton("Submit form")
}
